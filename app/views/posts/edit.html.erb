<!-- app/views/posts/edit.html.erb -->
<div class="main post-form" style="min-height: 1000px;">
  <%= form_with(model: @post, local: true, html: { class: "post-form-edit" }) do |form| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <h1>編集する投稿</h1>
    <div class="my-form">
      <%= form.label :title, class: "post-label" %>
      <%= form.text_field :title, class: "post-edit-title" %>
    </div> 
    <div class="my-form">     
      <%= form.label :content, class: "post-label" %><br />
      <%= form.text_area :content, class: "posts-edit" %>
    </div>
    <div class="button-wrapper">
      <%= form.submit "更新する", class: "btn btn-success post-button02" %>
      <!-- %= link_to '削除', post_path(@post), data: { 
        "turbo-method": "delete", 
        "turbo-confirm": "本当に削除しますか？" 
      }, class: 'my-button-02' % -->
      <%= link_to 'キャンセル', posts_path, class: 'my-button-02' %>      
      <%= link_to '一覧に戻る', posts_path, class: 'my-button' %>        
    </div>    
  <% end %>
</div>
